<p id="notice"><%= notice %></p>

<h1>Userfiles</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Date created</th>
      <th>Owner</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @userfiles.each do |userfile| %>
      <tr>
        <td><%= userfile.filename %></td>
        <td><%= userfile.date_created %></td>
        <td><%= userfile.owner %></td>
        <td><%= userfile.size %></td>
        <td><%= link_to 'Show', userfile %></td>
        <td><%= link_to 'Edit', edit_userfile_path(userfile) %></td>
        <td><%= link_to 'Destroy', userfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Userfile', new_userfile_path %>
